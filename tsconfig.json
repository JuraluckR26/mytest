{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // "@/*": ["./src/*"],
      "@/*": ["src/*"],
      "@components/*": ["components/*", "src/components/*"],
      "@mui/*": ["node_modules/@mui/*"],
      "*": ["public/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "cypress/e2e/login.cy.ts", "src/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
